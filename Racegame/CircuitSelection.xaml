<Window x:Class="Racegame.CircuitSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Racegame"
        mc:Ignorable="d"
        Title="CircuitSelection" Height="450" Width="800">
    <Grid Background="#1f1f1f">
        <Button x:Name="LeftButton" Width="100px" Content="Left" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Height="50">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="#b1b1b1"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#ffb34f"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <Button x:Name="RightButton" Width="100px" Content="Right" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="680,0,0,0" Height="50">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="#b1b1b1"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#ffb34f"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>


        <Rectangle Height="200" Width="200" Stroke="#b1b1b1">
            <Rectangle.Fill>
                <ImageBrush ImageSource="Images/SillySlope.png" />
            </Rectangle.Fill>
        </Rectangle>

        <Rectangle Height="100" Width="100" Stroke="#b1b1b1" Margin="540,167,160,167">
            <Rectangle.Fill>
                <ImageBrush ImageSource="Images/SpagettiTime.png" />
            </Rectangle.Fill>
        </Rectangle>

        <Rectangle Height="100" Width="100" Stroke="#b1b1b1" Margin="160,167,540,167">
            <Rectangle.Fill>
                <ImageBrush ImageSource="Images/GoodOlClassic.png" />
            </Rectangle.Fill>
        </Rectangle>

    </Grid>
</Window>
